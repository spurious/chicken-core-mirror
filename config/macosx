PLATFORM=macosx

XCODE_DEVELOPER=/Applications/Xcode.app/Contents/Developer
XCODE_TOOL_PATH="${XCODE_DEVELOPER}/Toolchains/XcodeDefault.xctoolchain/usr/bin"

C_COMPILER="${XCODE_DEVELOPER}/usr/bin/gcc"
C_COMPILER_OPTIONS="${C_COMPILER_OPTIONS} -fno-common"
C_COMPILER_SHARED_OPTIONS="-fPIC -DPIC"
LINKER_LINK_SHARED_LIBRARY_OPTIONS="-dynamiclib -compatibility_version 1 -current_version 1.0 -install_name lib${PROGRAM_PREFIX}chicken${PROGRAM_SUFFIX}.dylib"
LINKER_LINK_SHARED_DLOADABLE_OPTIONS="-bundle"
LINKER_LINK_SHARED_PROGRAM_OPTIONS="-Wl,-R\${RUNTIME_LINKER_PATH}"
LIBRARIAN_OPTIONS=scru
DYLIB=.dylib
NEEDS_INSTALL_NAME=1

if test -z "${ARCH}"; then
    ARCH=`sh ${SRCDIR}/config/config-arch.sh`

    if test "${ARCH}" = x86-64; then
        C_COMPILER_OPTIONS="${C_COMPILER_OPTIONS} -m64"
        LINKER_OPTIONS="${LINKER_OPTIONS} -m64"
        # Avoid bus error in install_name_tool
        LINKER_LINK_SHARED_DLOADABLE_OPTIONS="${LINKER_LINK_SHARED_DLOADABLE_OPTIONS} -Wl,-headerpad -Wl,128"
    fi
fi

if test "${ARCH}" = universal; then
    #XXX SDK version?
    C_COMPILER_OPTIONS="${C_COMPILER_OPTIONS} -arch ppc -arch i386 -isysroot ${XCODE_DEVELOPER}/SDKs/MacOSX10.4u.sdk"
    LINKER_OPTIONS="-arch ppc -arch i386 -isysroot ${XCODE_DEVELOPER}/SDKs/MacOSX10.4u.sdk"
fi

cat >chicken-config.h <<EOF
/* GENERATED */
#define HAVE_DIRENT_H 1
#define HAVE_DLFCN_H 1
#define HAVE_INTTYPES_H 1
#define HAVE_LIMITS_H 1
#define HAVE_LONG_LONG 1
#define HAVE_MEMMOVE 1
#define HAVE_MEMORY_H 1
#define HAVE_SIGACTION 1
#define HAVE_SIGSETJMP 1
#define HAVE_SIGPROCMASK 1
#define HAVE_STDINT_H 1
#define HAVE_STDLIB_H 1
#define HAVE_STRERROR 1
#define HAVE_STRINGS_H 1
#define HAVE_STRING_H 1
#define HAVE_STRLCAT 1
#define HAVE_STRLCPY 1
#define HAVE_STRTOLL 1
#define HAVE_STRTOQ 1
#define HAVE_SYS_STAT_H 1
#define HAVE_SYS_TYPES_H 1
#define HAVE_SETENV 1
#define HAVE_UNISTD_H 1
#define HAVE_UNSIGNED_LONG_LONG 1
#define STDC_HEADERS 1
#define HAVE_ALLOCA 1
#define HAVE_ALLOCA_H 1
#define HAVE_CRT_EXTERNS_H 1
#define HAVE_ERRNO_H 1
#define HAVE_SYSEXITS_H 1
#define C_STACK_GROWS_DOWNWARD 1
EOF
